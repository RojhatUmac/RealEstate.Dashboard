@page "/login"
@using MudBlazor
@using RealEstate.Dashboard.Components.Layout
@layout AuthLayout
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject AuthState Auth

<MudCard Style="width:100%;">

    <MudCardContent>

        <MudText Typo="Typo.h5" Align="Align.Center">
            Giriş Yap
        </MudText>

        <MudTextField T="string" Label="Kullanıcı Adı" Variant="Variant.Outlined" FullWidth />

        <MudTextField T="string" Label="Şifre" Variant="Variant.Outlined" InputType="InputType.Password" FullWidth />

        <MudButton Color="Color.Primary" Variant="Variant.Filled" FullWidth Class="mt-4"
                   OnClick="HandleLogin">
            Giriş Yap
        </MudButton>

    </MudCardContent>

</MudCard>

@code {
    void HandleLogin()
    {
        Auth.Login();
        Snackbar.Add("Başarıyla giriş yapıldı", Severity.Success);
        Navigation.NavigateTo("/");
    }
}
