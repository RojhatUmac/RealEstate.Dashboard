@inject AuthState Auth
@inject NavigationManager Nav

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">

        @if (!Auth.IsLoggedIn && !IsLoginPage())
        {
            <RedirectToLogin />
        }
        else
        {
            <RouteView RouteData="@routeData"
                       DefaultLayout="@typeof(RealEstate.Dashboard.Components.Layout.MainLayout)" />
        }

    </Found>
</Router>

@code {
    bool IsLoginPage()
        => Nav.Uri.Contains("/login", StringComparison.OrdinalIgnoreCase);
}